from prophet import Prophet

prophet_df = monthly_expense.rename(
    columns={'date':'ds', 'expense':'y'}
)

model = Prophet()
model.fit(prophet_df)

future = model.make_future_dataframe(periods=6, freq='ME')
forecast = model.predict(future)

